{
  "name": "poc-module-federation",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng run start:plataform",
    "start:plataform": "ng serve plataform  -o --port 4200",
    "prestart:currency-analysis": "node scripts/generate-env.js env/.env.development projects/currency-analysis/src/environments/environment.ts",
    "start:currency-analysis": "npm run prestart:currency-analysis && ng serve currency-analysis",
    "prebuild:currency-analysis": "node scripts/generate-env.js env/.env.production projects/currency-analysis/src/environments/environment.ts",
    "build:currency-analysis": "npm run prebuild:currency-analysis && ng build currency-analysis --configuration production",
    "start:all": "concurrently \"ng serve plataform\"  \"ng serve currency-analysis\"",
    "build:plataform": "ng build plataform --configuration production",
    "build": "npm run build:plataform && npm run build:currency-analysis",
    "serve:dist": "concurrently \"serve dist/plataform -l 4200 -s\" \"serve dist/currency-analysis -l 4201 -s\" ",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "run:all": "node node_modules/@angular-architects/module-federation/src/server/mf-dev-server.js"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation": "^19.0.3",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.13",
    "express": "^4.18.2",
    "ng-zorro-antd": "^19.2.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.13",
    "@angular/cli": "^19.2.13",
    "@angular/compiler-cli": "^19.2.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-build-plus": "^19.0.0",
    "typescript": "~5.7.2"
  }
}
